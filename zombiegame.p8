--enemy--

enemies={}

function ienemies()
 --create enemies
 for i=1,5 do
	 add(enemies,{
		 x=40+rnd(64),
		 y=20+rnd(64),
		 sprite=4,
		 hp=100,
		 damage=10,
		 flipped=false,
		 moving=false,
		 dead=false
	 })
 end
end

function uenemies()
 --update enemies
 for e in all(enemies) do
  if e.hp<=0 then
   die(e)
  end
 end
 if all_dead() then
  --respawn enemies
  ienemies()
 end
end

function die(e)
 --play death animation
 if (e.sprite<9) then
  e.sprite+=0.2
 else
  e.dead=true
 end
end

function all_dead()
 --check if all enemies are dead
 for e in all(enemies) do
  if not e.dead then
   return false
  end
 end
 return true
end
