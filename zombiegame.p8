--bullets--

dmg=35

function ibullets()
 buls={}
end

function ubullets()
 for bul in all(buls) do
  --what does each bullet do
  bul.x+=bul.spd
  if bul.x > 128 then
   --delete bullet off screen
   del(buls,bul)
  end
  for e in all(enemies) do
   if not e.dead and col(bul,e) then
    --deal damage to enemy
    del(buls,bul)
    e.hp-=dmg
    print(e.hp)
   end
  end
 end
end

function dbullets()
 for bul in all(buls) do
  --how to draw each bullet
  spr(0,bul.x,bul.y)
 end
end

function shoot()
 --what happens when we fire
 newbul = {
  x=player.x,
  y=player.y,
  spd=5,
  dmg=100
 }
 add(buls,newbul)
end
